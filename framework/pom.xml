					<execution>
						<goals>
							<goal>compress</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<suffix>.min</suffix>
					<excludes>
						<exclude>io/guise/framework/assets/javascript/tiny_mce/**/*.*</exclude>
						<exclude>io/guise/framework/assets/javascript/ckeditor-*/**/*.*</exclude>
					</excludes>
